
JanelaGerenciadora:
    JanelaPrincipal:
    JanelaBaixar:

<JanelaPrincipal>:
    name: "janelaprincipal"
    FloatLayout:
        MDToolbar:
            id: menu_
            pos_hint: {"top": 1}
            title: '[i]Heart Downloader[/i]'
            right_action_items: [['brightness-6', lambda x: app.mudar_cor()]]


        Image:
            source: "logo_com_legenda.png"
            allow_stretch: False
            pos_hint: {"center_x": .5, "center_y": .67}
            size_hint: 1, .6

        
        MDTextFieldRound:
            id: caixa_link
            text: ""
            hint_text: 'Cole o link do Youtube:'
            pos_hint: {"center_x": .45, "center_y": .4}
            size_hint: .68, .06
            icon_left: "link"
            halign: "left"
            multiline: False
            normal_color: app.theme_cls.accent_color

        MDIconButton:
            icon: "close-circle"
            pos_hint: {"center_x": .92, "center_y": .4}
            user_font_size: "36sp"
            on_release:
                root.apagar_caixa_link()
                


        MDFillRoundFlatIconButton:
            id: botao_baixar
            text: "[size=19]Baixar[/size]"
            icon: "download"
            pos_hint: {"center_x": .5, "center_y": .2}
            size_hint: .45, .09
            on_release: 
                root.pegar_video()


        MDTextButton:
            text: "Kalebe Chimanski de Almeida"
            custom_color: 0, 1, 0, 1
            pos_hint: {"center_x": .5, "center_y": .1}
            underline: True
            on_release:
                root.abrir_link()



                


<JanelaBaixar>:
    name: "janelabaixar"
    FloatLayout:


        MDFloatingActionButton:
            icon: "keyboard-return"
            elevation_normal: 12
            pos_hint: {"center_x": .15, "center_y": .94}
            on_release:
                app.voltar()


        MDFloatingActionButton:
            icon: "brightness-6"
            elevation_normal: 12
            pos_hint: {"center_x": .85, "center_y": .94}
            on_release:
                app.mudar_cor()


        AsyncImage:
            id: thumbnail
            source: ""
            allow_stretch: True
            pos_hint: {"center_x": .5, "center_y": .65}
            size_hint: 1, .3

        MDLabel:
            id: title
            text: ""
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .45}


        MDFillRoundFlatIconButton:
            id: botao_baixar_audio
            text: "[size=24]Audio[/size]"
            icon: "music-note"
            pos_hint: {"center_x": .3, "center_y": .2}
            on_release:
                root.baixar_audio()



        MDFillRoundFlatIconButton:
            id: botao_baixar_video
            text: "[size=24]Video[/size]"
            icon: "television-play"
            pos_hint: {"center_x": .75, "center_y": .2}
            on_release: 
                root.baixar_video()

                
